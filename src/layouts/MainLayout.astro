---
interface Props {
    title : string;
    class? : string;
}

const { title, ...props } = Astro.props

---

<html lang="en">
	<head>
        <title>{title}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body>
		<main class={props.class || ""}>
            <slot />
        </main>
	</body>
</html>