---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets'

interface Props {
    image : ImageMetadata;
    alt : string;
}

const { image, alt } = Astro.props

---

<figure class="flex justify-center bg-lightpink-200 snap-always snap-center shrink-0 w-full">
    <Image  class="shrink-0 h-full object-contain bg-lightpink-200"
            src={image}
            alt={alt}
    />
</figure>
